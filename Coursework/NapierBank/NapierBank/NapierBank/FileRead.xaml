<Window x:Class="NapierBank.FileRead"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NapierBank"
        mc:Ignorable="d"
        Title="FileRead" Height="300" Width="300">
    <Grid>
        <Button x:Name="btnRead" Content="Read" HorizontalAlignment="Left" Margin="125,147,0,0" VerticalAlignment="Top" Width="75" Height="30" Click="btnRead_Click"/>
        <Label x:Name="label" Content="File Path:" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Left" Height="23" Margin="107,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="87" VerticalAlignment="Top" Width="209" Source="Napier Bank.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Napier Bank.png"/>
            </Image.OpacityMask>
        </Image>

    </Grid>
</Window>
