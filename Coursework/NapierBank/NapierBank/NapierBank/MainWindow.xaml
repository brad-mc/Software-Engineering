<Window x:Class="NapierBank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NapierBank"
        mc:Ignorable="d"
        Title="Napier Bank Message Service" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnSendMessage" Content="Send Message" HorizontalAlignment="Left" Margin="10,264,0,0" VerticalAlignment="Top" Width="103" Click="btnSendMessage_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="68" VerticalAlignment="Top" Width="156" Source="Napier Bank.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Napier Bank.png"/>
            </Image.OpacityMask>
        </Image>
        <Button x:Name="btnTrendMentionSIR" Content="Trending Mentions and SIR" HorizontalAlignment="Left" Margin="139,264,0,0" VerticalAlignment="Top" Width="162" Click="btnTrendMentionSIR_Click"/>
    </Grid>
</Window>
